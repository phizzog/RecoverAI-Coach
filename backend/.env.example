# RecoverAI-Coach Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Whoop Integration
# ===========================================
# Your Whoop account credentials
WHOOP_USERNAME=your_whoop_username
WHOOP_PASSWORD=your_whoop_password

# ===========================================
# LLM API Keys (at least one required)
# ===========================================
# OpenAI API key (https://platform.openai.com/)
OPENAI_API_KEY=your_openai_api_key

# Anthropic API key (https://console.anthropic.com/)
ANTHROPIC_API_KEY=your_anthropic_api_key

# Google AI API key (https://makersuite.google.com/)
GOOGLE_API_KEY=your_google_api_key

# Groq API key (https://console.groq.com/)
GROQ_API_KEY=your_groq_api_key

# NVIDIA API key (https://build.nvidia.com/)
NVIDIA_API_KEY=your_nvidia_api_key

# ===========================================
# Ollama Configuration (for local models)
# ===========================================
# Ollama server URLs (leave empty if not using)
OLLAMA_BASE_URL_4090=
OLLAMA_BASE_URL_A6000=

# ===========================================
# MongoDB Atlas Configuration
# ===========================================
# MongoDB connection URIs for vector embeddings
MONGODB_ATLAS_URI_NUTRITION=your_mongodb_uri
MONGODB_ATLAS_URI_STRENGTH=your_mongodb_uri
MONGODB_ATLAS_URI_MINDSET=your_mongodb_uri

# ===========================================
# Embedding Service URLs
# ===========================================
# FastAPI embedding service endpoints
NUTRITION_DB_URL=http://localhost:5001/search
STRENGTH_DB_URL=http://localhost:5002/search
MINDSET_DB_URL=http://localhost:5003/search

# ===========================================
# Flask Configuration
# ===========================================
# Set to 'true' for development, 'false' for production
FLASK_DEBUG=false

# Comma-separated list of allowed origins for CORS
CORS_ORIGINS=http://localhost:3000

# ===========================================
# Security Configuration
# ===========================================
# Set to 'true' only for development with self-signed certs
# WARNING: Never use 'true' in production!
TLS_ALLOW_INVALID_CERTS=false
